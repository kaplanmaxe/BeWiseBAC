<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Food Places:"
        android:id="@+id/lblFood"
        android:layout_marginTop="69dp"
        android:layout_below="@+id/txtDirections"
        android:layout_alignLeft="@+id/lblHospital"
        android:layout_alignStart="@+id/lblHospital" />

    <EditTextPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtFood"
        android:width="48dip"
        android:layout_alignBottom="@+id/textView4"
        android:layout_toRightOf="@+id/lblHospital"
        android:layout_marginLeft="68dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Local Hospitals:"
        android:id="@+id/lblHospital"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/lblFood"
        android:layout_alignLeft="@+id/txtDirections"
        android:layout_alignStart="@+id/txtDirections" />

    <EditTextPreference
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:ems="10"
        android:id="@+id/txtHospital"
        android:width="48dip"
        android:layout_alignBottom="@+id/textView5"
        android:layout_toLeftOf="@+id/textView4" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Specify after how many drinks you would like to be notified of the following:"
        android:id="@+id/txtDirections"

        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="drinks"
        android:id="@+id/txtBAC"
        android:layout_alignTop="@+id/lblFood"
        android:layout_toRightOf="@+id/txtFood" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="drinks"
        android:id="@+id/txtAcropname"
        android:layout_alignTop="@+id/lblHospital"
        android:layout_toRightOf="@+id/txtHospital" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:id="@+id/btnSave"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

</PreferenceScreen>